{
  "name": "rbx",
  "version": "0.7.1",
  "description": "UI Components for React based on Bulma",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build:dist": "rollup -c",
    "build:lib": "tsc --project . && cpx \"src/**/*.sass\" lib",
    "build": "npm run clean && npm run build:dist && npm run build:lib",
    "clean": "rimraf lib dist",
    "coveralls": "cat ./.coverage/lcov.info | coveralls",
    "lint": "tslint --project .",
    "storybook:deploy": "storybook-to-ghpages",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test:cov": "tslint --project . && jest --coverage",
    "test": "jest",
    "watch": "rollup -cw"
  },
  "storybook-deployer": {
    "gitUsername": "dfee",
    "gitEmail": "devin@devinfee.com",
    "commitMessage": "Deploy Storybook [skip ci]"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dfee/rbx.git"
  },
  "keywords": [
    "react",
    "bulma",
    "bulma.io",
    "typescript"
  ],
